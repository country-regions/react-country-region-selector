{
  "name": "rcrs-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish": "turbo run build && cd packages/react-country-region-selector && npm publish && cd ../../",
    "update-gh-pages": "npm run build && node scripts/gh-pages.js"
  },
  "devDependencies": {
    "gh-pages": "^6.2.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.2",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
